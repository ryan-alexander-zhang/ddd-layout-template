<configuration>
  <include resource="org/springframework/boot/logging/logback/defaults.xml"/>

  <!--Define properties-->
  <property name="APP_NAME" value="ddd-layout-template-application"/>
  <property name="ENV" value="local"/>
  <property name="LOG_PATH" value="${user.home}/${APP_NAME}/logs"/>
  <property name="LOG_FILE" value="${LOG_PATH}/application.log"/>
  <property name="CONSOLE_LOG_PATTERN"
    value="%d{yyyy-MM-dd HH:mm:ss.SSS,UTC}|${APP_NAME}|${ENV}|%-5level|%thread|%C:%M:%L|request_id=%X{request_id}|trace_id=%X{traceId}|span_id=%X{spanId} - %msg%n"/>
  <appender name="APPLICATION"
    class="ch.qos.logback.core.rolling.RollingFileAppender">
    <!--Log file path-->
    <file>${LOG_FILE}</file>
    <encoder>
      <pattern>${FILE_LOG_PATTERN}</pattern>
    </encoder>
    <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
      <fileNamePattern>${LOG_FILE}.%d{yyyy-MM-dd}.%i.log</fileNamePattern>
      <maxHistory>7</maxHistory>
      <maxFileSize>50MB</maxFileSize>
      <totalSizeCap>20GB</totalSizeCap>
    </rollingPolicy>
  </appender>

  <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>${CONSOLE_LOG_PATTERN}</pattern>
      <charset>utf8</charset>
    </encoder>
  </appender>

  <root level="INFO">
    <appender-ref ref="CONSOLE"/>
    <appender-ref ref="APPLICATION"/>
  </root>

  <!--Application log-->
  <logger name="com.ryan.ddd" level="DEBUG"/>

  <!--Datasource log-->
  <logger name="com.apache.ibatis" level="TRACE" additivity="false">
    <appender-ref ref="CONSOLE"/>
  </logger>
</configuration>
